<center><h3>Days which the waiter can work</h3>
<form action="/days" method="post">
    <link rel="stylesheet" href="/css/style.css">
<table>
  <thead>

      <th>monday</th>
      <th>tuesday</th>
      <th>wednesday</th>
      <th>thursday</th>
      <th>friday</th>
      <th>saturday</th>
      <th>sunday</th>

</thead>
<tbody>
  <ul>
     <td class="{{colorChange}}">
       {{#each mon}}
        <li>{{this}}</li>
        {{/each}}
      </td>

      <td class="{{colorT}}">
         {{#each tues}}
        <li>{{this}}</li>
         {{/each}}
      </td>

        <td class="{{colorWed}}">
       {{#each wen}}
      <li>{{this}}</li>
      {{/each}}
    </td>

      <td class="{{colorThur}}">
       {{#each thurs}}
      <li>{{this}}</li>
      {{/each}}
    </td>

     <td class="{{colorFri}}">
    {{#each fri}}
    <li>{{this}}</li>
     {{/each}}
  </td>

     <td class="{{colorSat}}">
     {{#each sat}}
    <li>{{this}}</li>
     {{/each}}
  </td>

     <td class="{{colorSun}}">
     {{#each sun}}
    <li>{{this}}</li>
    {{/each}}
  </td>
</ul>
</tbody>
  </table>

   <button type="submit">Reset</button>

</form></center>
